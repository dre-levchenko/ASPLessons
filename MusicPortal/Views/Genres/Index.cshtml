@model IEnumerable<MusicPortal.Models.Genre>

@{
    ViewBag.Title = "Index";
}

@if (Session["IsAdmin"] != null)
{
    <h2>Genres <a href="\Genres\Create" class="btn btn-primary btn-lg">Create New</a></h2>
}
else
{ 
    <h2>Genres</h2>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>    
            <p><a class="btn-link" href="\Songs\Index">Songs &raquo;</a></p>
            @if (Session["IsAdmin"] != null)
            {
                <p>@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })</p>
            }
        </td>
    </tr>
}

</table>
